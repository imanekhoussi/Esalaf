<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="445.0" stylesheets="@credits.css" prefWidth="646.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.esalaf.CreditsController">
    <children>
        <TableView layoutX="23.0" layoutY="21.0" prefHeight="400.0" prefWidth="600.0" fx:id="creditsTable">
            <columns>
                <TableColumn fx:id="clientNameColumn" prefWidth="120.0" text="Client Name" />
                <TableColumn fx:id="productNameColumn" prefWidth="120.0" text="Product Name" />
                <TableColumn fx:id="creditAmountColumn" prefWidth="80.0" text="Quantity" />
                <TableColumn fx:id="creditDateColumn" prefWidth="120.0" text="Date" />
                <TableColumn fx:id="actionsColumn" prefWidth="120.0" text="Action"  />
            </columns>
            <style>
                -fx-background-color: white;
                -fx-padding: 10;
            </style>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>

        </TableView>
    </children>
</AnchorPane>
